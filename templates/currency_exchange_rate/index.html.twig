{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <div class="row">
            <h1>Check min and max in selected time</h1>
            <form name="getMinMax">
                <div class="row mt-5 align-items-start">
                    <div class="col">
                        <select 
                            class="form-select"
                            required
                            name="currency"
                        >
                            <option selected value="">Choose currency</option>
                            {% for currency in currencies %}
                                <option value={{ currency }}>{{ currency }}</option>
                            {% endfor %}
                        </select>
                    </div>
                    <div class="col">
                        <select 
                            class="form-select"
                            required
                            name="period"
                        >
                            <option selected value="">Choose week/month/quarter</option>
                            <option value="week">Week</option>
                            <option value="month">Month</option>
                            <option value="quarter">Quarter</option>
                        </select>
                    </div>
                    <div class="col">
                        <div class="input-group flex-nowrap">
                            <input
                                class="form-control" 
                                type="number"
                                min="1"
                                max="52"
                                step="1" 
                                placeholder="Number"
                                required
                                value=""
                                name="range"
                            />
                        </div>
                    </div>
                    <div class="col">
                        <button type="submit" class="btn btn-primary">Check</button>
                    </div>
                </div>
            </form>
            <div class="firstView">
                <div class="row mt-5 align-items-center">
                    <div class="col">
                        Min:
                        <div class="input-group flex-nowrap">
                            <input
                                class="form-control" 
                                type="number"
                                disabled
                                placeholder="Min"
                                name="min"
                            />
                        </div>
                    </div>
                    <div class="col">
                        Max:
                        <div class="input-group flex-nowrap">
                            <input
                                class="form-control" 
                                type="number"
                                disabled
                                placeholder="Max"
                                name="max"
                            />
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row mt-5">
            <h1>Check value in PLN</h1>
            <form name="getPlnValue">
                <div class="row mt-5 align-items-start">
                    <div class="col">
                     <select 
                        class="form-select"
                        required
                        name="currency"
                    >
                            <option selected value="">Choose currency</option>
                            {% for currency in currencies %}
                                <option value={{ currency }}>{{ currency }}</option>
                            {% endfor %}
                        </select>
                    </div>
                    <div class="col">
                        <div class="input-group flex-nowrap">
                            <input 
                                type="date" 
                                class="form-control" 
                                name="date" 
                                placeholder="Start date" 
                                aria-label="Start date" 
                                aria-describedby="addon-wrapping"
                                max="2023-12-31"
                                min="2023-01-01"
                                value="2023-01-01"
                                required
                                name="date"
                            >
                        </div>
                    </div>
                     <div class="col">
                        <div class="input-group flex-nowrap">
                            <input
                                class="form-control" 
                                type="number"
                                step="0.01"
                                placeholder="Money in PLN"
                                required
                                name="value"
                            />
                        </div>
                    </div>
                    <div class="col">
                        <button type="submit" class="btn btn-primary">Check</button>
                    </div>
                </div>
            </form>
            <div class="secondView">
                <div class="row mt-5 align-items-center">
                    <div class="col">
                        Value in PLN:
                        <div class="input-group flex-nowrap">
                            <input
                                class="form-control" 
                                type="number"
                                disabled
                                placeholder="Value"
                                name="valueInPln"
                            />
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="modal" tabindex="-1">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title"></h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Ok</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}